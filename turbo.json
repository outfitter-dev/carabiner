{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "outputs": ["dist/**", "build/**", ".next/**", "!.next/cache/**"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "test/**", "tests/**", "*.test.ts", "*.test.tsx"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": [],
      "inputs": ["**/*.ts", "**/*.tsx", "tsconfig.json"]
    },
    "//#format": {
      "cache": false,
      "outputs": []
    },
    "//#lint": {
      "cache": false,
      "outputs": []
    }
  }
}
