{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build", "typecheck"],
      "outputs": [
        "dist/**",
        "build/**",
        ".next/**",
        "!.next/cache/**",
        "!dist/.tsbuildinfo"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "test": {
      "dependsOn": ["^build"],
      "outputs": ["coverage/**"],
      "inputs": ["src/**", "test/**", "tests/**", "*.test.ts", "*.test.tsx"]
    },
    "typecheck": {
      "dependsOn": ["^build"],
      "outputs": ["dist/.tsbuildinfo"],
      "inputs": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "tsconfig.json",
        "tsconfig.build.json"
      ]
    },
    "clean": {
      "cache": false,
      "outputs": []
    },
    "//#format": {
      "cache": false,
      "outputs": []
    },
    "//#lint": {
      "cache": false,
      "outputs": []
    }
  }
}
