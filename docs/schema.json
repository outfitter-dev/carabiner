{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://carabiner.outfitter.dev/schema.json",
  "title": "Carabiner Hook Configuration",
  "description": "JSON Schema for Carabiner hook configuration files",
  "type": "object",
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Reference to this JSON schema",
      "default": "https://carabiner.outfitter.dev/schema.json"
    },
    "hooks": {
      "type": "object",
      "description": "Hook configurations organized by event type",
      "properties": {
        "PreToolUse": {
          "$ref": "#/definitions/HookEventConfig"
        },
        "PostToolUse": {
          "$ref": "#/definitions/HookEventConfig"
        },
        "SessionStart": {
          "$ref": "#/definitions/HookConfig"
        },
        "SessionEnd": {
          "$ref": "#/definitions/HookConfig"
        },
        "PreUserPromptSubmit": {
          "$ref": "#/definitions/HookConfig"
        },
        "PostUserPromptSubmit": {
          "$ref": "#/definitions/HookConfig"
        }
      },
      "additionalProperties": false
    },
    "settings": {
      "type": "object",
      "description": "Global hook settings",
      "properties": {
        "enabled": {
          "type": "boolean",
          "description": "Enable or disable all hooks",
          "default": true
        },
        "timeout": {
          "type": "number",
          "description": "Default timeout in milliseconds",
          "default": 30000
        },
        "logLevel": {
          "type": "string",
          "enum": ["debug", "info", "warn", "error"],
          "description": "Logging level",
          "default": "info"
        }
      }
    }
  },
  "definitions": {
    "HookConfig": {
      "type": "object",
      "properties": {
        "command": {
          "type": "string",
          "description": "Command to execute for this hook"
        },
        "timeout": {
          "type": "number",
          "description": "Timeout in milliseconds for this hook"
        },
        "enabled": {
          "type": "boolean",
          "description": "Whether this hook is enabled",
          "default": true
        },
        "workingDirectory": {
          "type": "string",
          "description": "Working directory for hook execution"
        },
        "env": {
          "type": "object",
          "description": "Environment variables for hook execution",
          "additionalProperties": {
            "type": "string"
          }
        }
      },
      "required": ["command"]
    },
    "HookEventConfig": {
      "type": "object",
      "description": "Tool-specific hook configurations",
      "properties": {
        "*": {
          "$ref": "#/definitions/HookConfig",
          "description": "Universal hook for all tools"
        },
        "Bash": {
          "$ref": "#/definitions/HookConfig",
          "description": "Hook for Bash tool"
        },
        "Write": {
          "$ref": "#/definitions/HookConfig",
          "description": "Hook for Write tool"
        },
        "Edit": {
          "$ref": "#/definitions/HookConfig",
          "description": "Hook for Edit tool"
        },
        "Read": {
          "$ref": "#/definitions/HookConfig",
          "description": "Hook for Read tool"
        },
        "MultiEdit": {
          "$ref": "#/definitions/HookConfig",
          "description": "Hook for MultiEdit tool"
        },
        "List": {
          "$ref": "#/definitions/HookConfig",
          "description": "Hook for List tool"
        }
      },
      "additionalProperties": {
        "$ref": "#/definitions/HookConfig"
      }
    }
  }
}
