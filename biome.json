{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "extends": ["ultracite"],
  "javascript": {
    "globals": ["Bun"]
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  },
  "files": {
    "ignoreUnknown": true,
    "includes": ["**/*.{js,ts,jsx,tsx,json,jsonc}"]
  },
  "vcs": {
    "useIgnoreFile": true
  },
  "linter": {
    "rules": {
      "style": {
        "noMagicNumbers": "off",
        "noEnum": "off",
        "noParameterProperties": "off"
      },
      "complexity": {
        "noVoid": "off",
        "noExcessiveCognitiveComplexity": "off",
        "noExcessiveLinesPerFunction": "off"
      },
      "performance": {
        "useTopLevelRegex": "off"
      },
      "suspicious": {
        "useAwait": "off",
        "noExplicitAny": "warn",
        "noConsole": "warn",
        "noBitwiseOperators": "warn",
        "noAsyncPromiseExecutor": "warn"
      },
      "nursery": {
        "noUnnecessaryConditions": "off",
        "useMaxParams": "off"
      }
    }
  }
}
