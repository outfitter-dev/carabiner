{
  "$schema": "https://biomejs.dev/schemas/2.2.0/schema.json",
  "extends": ["ultracite"],
  "javascript": {
    "globals": ["Bun"]
  },
  "json": {
    "parser": {
      "allowComments": true,
      "allowTrailingCommas": true
    }
  },
  "files": {
    "ignoreUnknown": false,
    "includes": ["**/*.{ts,tsx,js,jsx,cjs,mjs}"]
  },
  "vcs": {
    "useIgnoreFile": true
  }
}
