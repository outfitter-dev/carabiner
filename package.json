{
  "name": "@outfitter/grapple",
  "version": "1.0.0",
  "description": "A monorepo dedicated to tooling for Claude Code hooks",
  "type": "module",
  "private": true,
  "keywords": [
    "claude-code",
    "hooks",
    "tooling",
    "monorepo",
    "bun",
    "typescript"
  ],
  "author": "Matt Galligan <matt.galligan@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/outfitter-dev/grapple.git"
  },
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo build",
    "build:packages": "turbo build --filter='./packages/*'",
    "build:examples": "turbo build --filter='./packages/examples'",
    "dev": "turbo dev",
    "test": "turbo test",
    "test:ci": "turbo test --concurrency=1",
    "format": "bun x ultracite@latest format",
    "lint": "bun x ultracite@latest lint",
    "lint:fix": "bun x ultracite@latest lint --write",
    "lint:packages": "publint packages/*/dist",
    "typecheck": "turbo typecheck",
    "typecheck:core": "turbo typecheck --filter=@claude-code/hooks-core --filter=@claude-code/hooks-config --filter=@claude-code/hooks-validators --filter=@claude-code/hooks-cli --filter=@claude-code/hooks-testing",
    "typecheck:all": "tsc --noEmit",
    "ci:full": "bun run lint && bun run typecheck && bun run test:ci && bun run build",
    "setup:tests": "bun scripts/setup-tests.ts",
    "format:check": "bun x ultracite@latest lint",
    "prepare": "lefthook install",
    "lefthook:run": "lefthook run",
    "changeset": "changeset",
    "changeset:version": "changeset version && bun install --lockfile-only",
    "changeset:publish": "bun run build:packages && changeset publish",
    "release:check": "bun run ci:full && bun run lint:packages",
    "verify:build": "bun scripts/verify-build.ts",
    "clean": "turbo clean && find packages -name 'dist' -type d -exec rm -rf {} + 2>/dev/null || true"
  },
  "devDependencies": {
    "@biomejs/biome": "2.1.2",
    "@changesets/cli": "^2.27.9",
    "@types/bun": "^1.2.19",
    "@types/node": "^22.10.5",
    "@vitest/coverage-v8": "^3.2.4",
    "lefthook": "^1.12.2",
    "publint": "^0.3.12",
    "syncpack": "^14.0.0-alpha.18",
    "turbo": "^2.3.3",
    "type-fest": "^4.41.0",
    "typedoc": "^0.28.7",
    "typescript": "^5.7.2",
    "ultracite": "5.1.1",
    "vitest": "^3.2.4"
  },
  "packageManager": "bun@1.1.44"
}
