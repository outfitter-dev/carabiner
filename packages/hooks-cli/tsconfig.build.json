{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "removeComments": true,
    "emitDeclarationOnly": false,
    "composite": true,
    "incremental": true,
    "tsBuildInfoFile": "./dist/.tsbuildinfo",
    "noEmit": false,
    "allowImportingTsExtensions": false
  },
  "include": ["src/**/*"],
  "exclude": ["src/**/*.test.ts", "src/**/__tests__/**", "dist", "node_modules"],
  "references": [
    {
      "path": "../hooks-core/tsconfig.build.json"
    },
    {
      "path": "../hooks-config/tsconfig.build.json"
    },
    {
      "path": "../hooks-validators/tsconfig.build.json"
    },
    {
      "path": "../hooks-testing/tsconfig.build.json"
    }
  ]
}
