{
    "name": "@carabiner/hooks-registry",
    "version": "0.1.0",
    "description": "Official registry of Claude Code hooks",
    "type": "module",
    "sideEffects": false,
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "exports": {
        ".": {
            "types": "./dist/index.d.ts",
            "import": "./dist/index.js"
        },
        "./hooks/*": {
            "types": "./dist/hooks/*.d.ts",
            "import": "./dist/hooks/*.js"
        }
    },
    "files": [
        "dist",
        "README.md"
    ],
    "scripts": {
        "build": "tsc",
        "test": "bun test",
        "typecheck": "tsc --noEmit",
        "clean": "rm -rf dist"
    },
    "dependencies": {
        "@carabiner/execution": "workspace:*",
        "@carabiner/protocol": "workspace:*",
        "@carabiner/schemas": "workspace:*",
        "@carabiner/types": "workspace:*",
        "picomatch": "^4.0.2"
    },
    "devDependencies": {
        "@types/bun": "latest",
        "@types/node": "^24.2.1",
        "@types/picomatch": "^4.0.2",
        "type-fest": "^4.41.0",
        "typescript": "^5.9.2"
    },
    "peerDependencies": {
        "markdownlint-cli2": "^0.18.1",
        "prettier": "^3.6.2"
    },
    "peerDependenciesMeta": {
        "markdownlint-cli2": {
            "optional": true
        },
        "prettier": {
            "optional": true
        }
    },
    "keywords": [
        "claude-code",
        "hooks",
        "registry",
        "formatters",
        "linters"
    ],
    "author": "Matt Galligan <matt.galligan@gmail.com>",
    "license": "MIT",
    "repository": {
        "type": "git",
        "url": "https://github.com/outfitter-dev/carabiner.git",
        "directory": "packages/hooks-registry"
    }
}
