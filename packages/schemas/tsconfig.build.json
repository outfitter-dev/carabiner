{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "noEmit": false,
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": false,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "composite": true,
    "incremental": true,
    "outDir": "./dist",
    "tsBuildInfoFile": "./dist/.tsbuildinfo"
  },
  "exclude": ["**/*.test.ts", "**/*.spec.ts", "src/__tests__"],
  "references": [
    {
      "path": "../types/tsconfig.build.json"
    }
  ]
}
